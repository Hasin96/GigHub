@model GigHub.ViewModels.GigsViewModel
@{
    ViewBag.Title = "Home Page";
}

<h1>@Model.Heading</h1>
 @using (Html.BeginForm("Search", "Gigs"))
    {
        <div class="form-group">
            <div class="input-group" id="searchGigs">
                @Html.TextBoxFor(m => m.SearchTerm, new { @class = "form-control", placeholder = "Search by artist, genre or venue" })
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-search"></i>
                </span>
            </div>
        </div>
    }
<ul class="gigs voffset3">
    @foreach(var gig in Model.UpcomingGigs)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
            </div>
            <div class="detail">
                <span class="artist">
                    @gig.Artist.Name

                    @if  (gig.IsCanceled)
                    {
                        <span class="label label-warning">
                            Canceled
                        </span>
                    }
                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
            </div>
            @if (Model.ShowActions && !gig.IsCanceled)
            {
                <div class="going">
                <button data-gig-id="@gig.Id" class="btn btn-sm btn-default js-toggle-attendance">Going</button>
                <button data-followee-id="@gig.Artist.Id" class="btn btn-sm btn-default js-toggle-follow">Follow artist</button>
            </div>
            }
            
        </li>
    }
</ul>


@section scripts 
{
    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function (e) {
                var button = $(e.target);

                $.post("/api/attendances", { gigId: button.attr("data-gig-id") })
                    .done(function () {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going");
                    })
                    .fail(function () {
                        alert("Fail bro :(");
                    })
            });

            $(".js-toggle-follow").click(function (e) {
                var button = $(e.target);

                $.post("/api/followings", { followeeId: button.attr("data-followee-id") })
                    .done(function () {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-primary")
                            .text("Following");
                    })
                    .fail(function () {
                        alert("Fail to follow bro :(");
                    })
            });
        });
    </script>    
}